<Window x:Class="Retail_Managment_WPF_UI.Views.UserDashbordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retail_Managment_WPF_UI.Views"
        mc:Ignorable="d"
        Title="User Dashboard" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent" 
        WindowStyle="None" 
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="Transparent"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6A11CB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Title Bar Buttons Style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8229CC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6A11CB" Offset="0"/>
                <GradientStop Color="#2575FC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Define Rows for Top Bar & Main Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Top Bar -->
            <RowDefinition Height="*"/>
            <!-- Sidebar & Main Content -->
        </Grid.RowDefinitions>

        <!-- Top Bar (Spans Full Width) -->
        <DockPanel Background="#5A189A" Grid.Row="0">
            <!-- Window Title -->
            <TextBlock Text="User Dashboard" Foreground="White" FontSize="18"
                   VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- Window Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="─" Width="40" Height="30" Foreground="White"
                    Background="Transparent" FontSize="18"
                    Click="Minimize_Click" Style="{StaticResource TitleBarButton}"/>

                <Button Name="MaximizeButton" Content="□" Width="40" Height="30" Foreground="White"
                    Background="Transparent" FontSize="14"
                    Click="Maximize_Click" Style="{StaticResource TitleBarButton}"/>

                <Button Content="✖" Width="40" Height="30" Foreground="White"
                    Background="Transparent" FontSize="16"
                    Click="Close_Click" Style="{StaticResource TitleBarButton}"/>
            </StackPanel>
        </DockPanel>

        <!-- Sidebar & Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Main Content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar (Navigation) -->
            <StackPanel Background="#3A0CA3" Width="220" Height="Auto" Grid.Column="0">
                <TextBlock Text="User Panel" Foreground="White" FontSize="22" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,30,0,30"/>

                <Button Content="Dashboard" Style="{StaticResource SidebarButton}" Click="Dashboard_Click"/>
                <Button Content="Users" Style="{StaticResource SidebarButton}" Click="Users_Click"/>
                <Button Content="Settings" Style="{StaticResource SidebarButton}" Click="Settings_Click"/>
                <Button Content="Logout" Style="{StaticResource SidebarButton}" Click="Logout_Click"/>
            </StackPanel>

            <!-- Main Content Area -->
            <Frame Name="MainFrame" Grid.Column="1"/>
        </Grid>
    </Grid>

</Window>
