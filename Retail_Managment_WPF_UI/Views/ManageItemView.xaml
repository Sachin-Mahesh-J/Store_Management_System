<Window x:Class="Retail_Managment_WPF_UI.Views.ManageItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retail_Managment_WPF_UI.Views"
        mc:Ignorable="d"
        Title="ManageItemView" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" 
        WindowStyle="None" 
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="Transparent"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6A11CB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Title Bar Buttons Style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8229CC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6A11CB" Offset="0"/>
                <GradientStop Color="#2575FC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Define Rows for Top Bar & Main Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Top Bar -->
            <RowDefinition Height="*"/>
            <!-- Sidebar & Main Content -->
        </Grid.RowDefinitions>

        <!-- Top Bar (Spans Full Width) -->
        <DockPanel Background="#5A189A" Grid.Row="0">
            <!-- Window Title -->
            <TextBlock Text="Manage Item Dashboard" Foreground="White" FontSize="18"
           VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- Window Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="─" Width="40" Height="30" Foreground="White"
            Background="Transparent" FontSize="18"
            Click="Minimize_Click" Style="{StaticResource TitleBarButton}"/>

                <Button Name="MaximizeButton" Content="□" Width="40" Height="30" Foreground="White"
            Background="Transparent" FontSize="14"
            Click="Maximize_Click" Style="{StaticResource TitleBarButton}"/>

                <Button Content="✖" Width="40" Height="30" Foreground="White"
            Background="Transparent" FontSize="16"
            Click="Close_Click" Style="{StaticResource TitleBarButton}"/>
            </StackPanel>
        </DockPanel>

        <!-- Sidebar & Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <!-- Sidebar -->
                <ColumnDefinition/>
                <!-- Main Content -->
            </Grid.ColumnDefinitions>





            <!-- Main Content Area -->
            <Frame Name="MainFrame" Grid.Column="1"/>
            <Border Background="White" CornerRadius="15" 
            Padding="20" Opacity="0.95" Margin="0,10,0,21" HorizontalAlignment="Center" Width="356">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Item Details" FontSize="24" FontWeight="Bold" 
                    Foreground="#333" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                    <TextBlock Foreground="Gray" Margin="5,0" Text="1"/>
                    <TextBox x:Name="txtUsername" Height="35" FontSize="14"
                    BorderBrush="#6A11CB" BorderThickness="1" Padding="5"
                    Background="#F2F2F2" />

                    <TextBlock Text="2" Foreground="Gray" Margin="10,10,5,0" IsEnabled="False"/>
                    <PasswordBox x:Name="txtFirstName" Height="35" FontSize="14"
                    BorderBrush="#6A11CB" BorderThickness="1" Padding="5"
                    Background="#F2F2F2" />

                    <TextBlock Text="3" Foreground="Gray" Margin="10,10,5,0" IsEnabled="False"/>
                    <PasswordBox x:Name="txtLastName" Height="35" FontSize="14"
                    BorderBrush="#6A11CB" BorderThickness="1" Padding="5"
                    Background="#F2F2F2" />

                    <TextBlock Text="4" Foreground="Gray" Margin="10,10,5,0" IsEnabled="False"/>
                    <PasswordBox x:Name="txtRole" Height="35" FontSize="14"
                   BorderBrush="#6A11CB" BorderThickness="1" Padding="5"
                   Background="#F2F2F2" />

                    <TextBlock Text="5" Foreground="Gray" Margin="10,10,5,0" IsEnabled="False"/>
                    <PasswordBox x:Name="txtPhoneNumber" Height="35" FontSize="14"
                    BorderBrush="#6A11CB" BorderThickness="1" Padding="5"
                    Background="#F2F2F2" />

                    <TextBlock Text="6" Foreground="Gray" Margin="10,10,5,0" IsEnabled="False"/>
                    <PasswordBox x:Name="txtEmail" Height="35" FontSize="14"
                    BorderBrush="#6A11CB" BorderThickness="1" Padding="5"
                    Background="#F2F2F2" />



                    <Button Content="SAVE" Width="100" Height="40" FontSize="16"
                    Background="#6A11CB" Foreground="White" FontWeight="Bold"
                    HorizontalAlignment="Center" Margin="20,20,20,0" 
                    />


                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</Window>
