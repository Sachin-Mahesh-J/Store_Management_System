<Window x:Class="Retail_Managment_WPF_UI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retail_Managment_WPF_UI.Views"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        >


    <Border CornerRadius="50">
        <Border.Background>
            <ImageBrush ImageSource="/image/cashier.gif"
                    Stretch="None"
                    />
        </Border.Background>
        <Border CornerRadius="20"
            BorderThickness="5"
            Opacity="0.7" RenderTransformOrigin="1.112,0.947">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#da34ae" Offset="0.75"/>
                    <GradientStop Color="#8a16c1" Offset="1"/>

                </LinearGradientBrush>

            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#da34ae" Offset="0.75"/>


                </LinearGradientBrush>

            </Border.Background>


            <Grid Margin="0,0,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35*"/>
                    <ColumnDefinition Width="44*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LOGIN"
                           Foreground="DarkGray"
                           FontSize="10"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"/>
                </Grid>

                <StackPanel Width="364"
                        Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Left" Margin="228,0,0,0" Grid.ColumnSpan="2">

                    <TextBlock Text="Username"
                           Foreground="black" 
                           FontSize="16"
                           FontWeight="Bold"
                           FontFamily="Montserrat" 
                           Margin="0,35,0,0"/>

                    <TextBox x:Name="txtUser" 
                         FontSize="13"
                         FontWeight="Medium" 
                         FontFamily="Montserrat"
                         Background="Transparent"
                         Foreground="black"
                         CaretBrush="LightGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0">


                    </TextBox>

                    <TextBlock Text="Password"
                           Foreground="black" 
                           FontSize="16"
                           FontWeight="Bold"
                           FontFamily="Montserrat" 
                           Margin="0,35,0,0"/>

                    <TextBox x:Name="txtpassword" 
                           FontSize="13"
                           FontWeight="Medium" 
                           FontFamily="Montserrat"
                           Background="Transparent"
                           Foreground="black"
                           CaretBrush="LightGray"
                           BorderThickness="0,0,0,1"
                           Height="28"
                           VerticalContentAlignment="Center"
                           Margin="0,5,0,0">


                    </TextBox>

                </StackPanel>
                <Button 
                Content="-" 
                HorizontalAlignment="Left" 
                Margin="352,10,0,0" 
                VerticalAlignment="Top" 
                Width="24" 
                RenderTransformOrigin="0.417,0.251" Grid.Column="1">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#28AEED"/>

                        </Style>
                    </Button.Style>

                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="1.492"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>




                <Button 
                Content="x" 
                HorizontalAlignment="Left" 
                Margin="396,10,0,0" 
                Width="24" 
                RenderTransformOrigin="0.5,0.5" Click="Button_Click_2" Grid.Column="1" Height="20" VerticalAlignment="Top">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="red"/>

                        </Style>
                    </Button.Style>

                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.805"/>
                            <TranslateTransform X="-0.07" Y="0.027"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="btnLogin" 
                Content="LOGIN" 
                Margin="4,224,320,224" 
                Grid.Row="1" FontWeight="Bold" 
                    FontSize="24" 
                    Background="#FF6578E2" 
                    BorderBrush="White" 
                    Click="btnLogin_Click" Grid.Column="1"/>







            </Grid>



        </Border>
    </Border>


</Window>
